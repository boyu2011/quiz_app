<h4>Question:</h4>

<%= @question.content %>

<% if @correct %>
	<h5 class="text-success">Correct!</h5>
<% else %>
	<h5	class="text-error">Incorrect!</h5>
<% end %>

<br/>

<%= form_tag({:controller => "do_quiz", :action => "question"}) do %>
	<%= submit_tag("Continue", :class => "submit") %>
<% end %>

	