<h4>Question:<h4>
	<br/>
<h5><%= @question.content %></h5>
<%= form_tag({:controller => "do_quiz", :action => "answer"}) do %>
	<% @choices.each do |choice| %>
		<%= radio_button_tag(:choice, choice.id) %>
		<%= label_tag("choice_".concat(choice.id.to_s).to_sym, choice.content) %>
	<% end %>
	<br/>
	<%= submit_tag("Continue", :class => "submit") %>
<% end %>

