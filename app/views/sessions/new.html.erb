<header>
	<nav>
		<% if signed_in? %>
			<li><%= link_to "Sign out", signout_path, method: "delete" %>
		<% else %>
			<li><%= link_to "Sign in", signin_path %>
		<% end %>
	</nav>
</header>

<h1>Sign in</h1>

<%= form_for(:session, url: sessions_path) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%= f.label :password %>
	<%= f.password_field :password %>
	
	<%= f.submit "Sign in" %>
<% end %>